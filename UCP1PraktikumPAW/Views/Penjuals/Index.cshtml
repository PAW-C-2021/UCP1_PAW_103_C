@model IEnumerable<UCP1PraktikumPAW.Models.Penjual>

@{
    ViewData["Title"] = "PENJUAL";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama Penjual")
            </th>
            <th>
                @Html.DisplayName("Email Penjual")
            </th>
            <th>
                @Html.DisplayName("Alamat Penjual")
            </th>
            <th>
                @Html.DisplayName("No Hp Penjual")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPenjual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailPenjual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlamatPenjual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoHpPenjual)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPenjual"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPenjual"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPenjual"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
